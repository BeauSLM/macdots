[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	longpaths = true
        compression = 0
        pager = delta

[commit]
        verbose = 2

[interactive]
